{
  "manifest_version": 3,
  "name": "Omni 搜",
  "version": "3.0.0",
  "description": "\uD83D\uDE80 极致、纯净、隐私优先的 Chrome 全局搜索扩展",
  "icons": {
    "16": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "windows",
    "history",
    "favicon",
    "storage",
    "search",
    "notifications",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "打开 Omni 搜",
      "global": true
    },
    "open_custom_add_collection_data_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "将当前页面添加到 Omni 收藏",
      "global": true
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
