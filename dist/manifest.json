{
  "manifest_version": 3,
  "name": "Bookmarks search",
  "version": "2.0.0",
  "description": "基于chrome的书签搜索插件。",
  "icons": {
    "16": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "windows",
    "history",
    "favicon",
    "storage",
    "search",
    "notifications",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "打开书签搜索",
      "global": true
    },
    "add_temporary_bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "将当前页面添加为临时书签",
      "global": true
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
